{% extends "layout.html.twig" %}

{% block title %}Bombers de València
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body {
			background-image: url("../../images/firefighter.png");
		}
		.news-author,
		.news-place {
			font-size: 14px;
			color: #888;
			margin-bottom: 5px;
			text-align: center;
		}
		.news-item {
			position: relative;
			background-color: #f2f2f2;
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			justify-content: flex-start;
			height: 300px;
			border-radius: 0.3rem;
			text-align: center;
			transition: all 0.3s ease;
		}

		.news-content {
			flex-grow: 1;
			padding: 20px;
		}

		.news-author {
			font-size: 14px;
			color: #888;
			position: absolute;
			bottom: 10px;
			right: 10px;
		}
		.news-place {
			font-size: 14px;
			color: #888;
			position: absolute;
			bottom: 30px;
			right: 10px;
		}
	</style>
{% endblock %}

{% block bodyContent %}

	<div class="hero-section">
		<div class="hero-text" id="hero-title">SEMPRE AL TEU COSTAT</div>
		<div class="hero-subtext">
			Bombers de València
			<br>
			Si ens necessites, cridans. Arribem a qualsevol comunitat
		</div>
	</div>
	<div class="news-section">
		<h2 class="news-content-title">Últimas Noticias</h2>
		<div class="news-grid">

			{% for item in items %}

				<div class="news-item">
					<div class="news-content">
						<h3 class="news-title">{{ item.title }}</h3>
						<p class="news-subtitle">{{ item.subtitle }}</p>
						<p class="news-place">Lugar:{{ item.place }}</p>
						<p class="news-author">Autor:{{ item.author }}</p>
					</div>
				</div>

			{% endfor %}

		</div>
	</div>

{% endblock %}
